class Solution {
public:
    bool isValid(string s) {
        

        stack<char>stk;

        for(int i=0; i<s.size(); i++)
        {
            if(s[i] == '(' || s[i] == '[' || s[i] == '{') // opening bracket
            {
                stk.push(s[i]);
            }
            else // closing bracket
            {
                if(stk.size() == 0)
                    return false;

                if((s[i] == ')' && stk.top() == '(') || (s[i] == ']' && stk.top() == '[') || (s[i] == '}' && stk.top() == '{') ) 
                {
                    stk.pop();
                }
                else
                {
                    return false;
                }
            }
        }

        if(stk.size()) 
            return false;

        return true;
    }
};
