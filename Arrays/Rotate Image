class Solution {
public:
    void rotate(vector<vector<int>>& matrix) {

        int n = matrix.size(); // number of rows
        int m = matrix[0].size(); // number of columns

        for(int i=0; i<n; i++)
        {
            for(int j=0; j<n; j++)
            {
               if(i <= j)
                swap(matrix[i][j],matrix[j][i]);
            }
        }

        for(int i=0; i<n; i++)
        {
            reverse(matrix[i].begin(),matrix[i].end());
        }  
    }
};
